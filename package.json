  "bugs": {
    "url": "https://github.com/languageBuddy/LBBackend/issues"
  },
  "homepage": "https://github.com/languageBuddy/LBBackend#readme",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^6.0.8",
    "nodemailer": "^6.6.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.13"
  }
}